{% extends 'base.html.twig' %}

{% block title %}Sythèse des commandes par date{% endblock %}

{% block titre_page %}
<h3 class="s-0 text-dark">Sythèse des commandes par date</h3>
{% endblock %}

{% block body %}
<div class="col-md-12">
{% for jour_distrib in jour_distribs %}

    <div class="card">
        <div class="card-header border-transparent">
            <h3 class="card-title">{{ jour_distrib.date|format_datetime('full', 'none', locale='fr') }}</h3>
            <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-sm table-bordered">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Pain</th>
                            <th>Prix</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for commande in jour_distrib.commandes %}
                        {% set total = 0 %}
                        {% set somme = 0 %}
                        <tr>
                            <td>{{ commande.prenom }} {{ commande.nom }}</td>
                            <td>
                            {% for ligne_commande in commande.ligneCommandes %}
                                {% set somme = ligne_commande.quantite*ligne_commande.pain.prix %}
                                {% set total = total+somme %}
                                <p>{{ ligne_commande.quantite}} {{ ligne_commande.pain.nom }} - {{ ligne_commande.pain.poid }}kg </p>
                            {% endfor %}
                            </td>
                            <td>{{ total }} €</td>
                            <td>{{ include('commande/_delete_form.html.twig') }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endfor %}

</div>
{% endblock %}

{% block navbar %}

{% endblock %}