{% extends 'base.html.twig' %}

{% block title %}{{ 'recap.title'|trans }}{% endblock %}

{% block titre_page %}
<h3 class="s-0 text-dark">{{ 'recap.title'|trans }}</h3>
{% endblock %}
{% block body %}
<div class="col-md-12">
    <div class="card">
        {% for jourRecap in joursRecap %}
            <div class="card">
                <div class="card-header border-transparent">
                    <h3 class="card-title">{{ jourRecap.jourDistrib|format_datetime('full', 'none', locale='fr') }}</h3>
                    <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    </div>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>{{ 'recap.nom'|trans }}</th>
                                    <th>{{ 'recap.quantite'|trans }}</th>
                                    <th>{{ 'recap.conditionnement'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for product in jourRecap.products %}
                                <tr>
                                    <td>{{ product.nom }}</td>
                                    <td>{{ product.total }}</td>
                                    <td>{{ product.conditionnement }} {{ product.unit }}</td>
                                </tr>
                                {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block navbar %}

{% endblock %}