{% extends 'base.html.twig' %}

{% block title %}Sythèse poids{% endblock %}

{% block titre_page %}
<h3 class="s-0 text-dark">Sythèse des  poids</h3>
{% endblock %}
{% block body 
%}
<div class="col-md-12">
    <div class="card">
        {% for poid in poids %}
            <div class="card">
                <div class="card-header border-transparent">
                    <h3 class="card-title">{{ poid.date|format_datetime('full', 'none', locale='fr') }}</h3>
                    <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    </div>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-sm table-bordered">
                            <tbody>
                                <tr>
                                {% for pain in poid.pains %}
                                    <td>{{ pain.nom }} - {{ pain.poid }} kg</td>
                                
                                {% endfor %}
                                </tr>

                                <tr>
                                {% for pain in poid.pains %}
                                    <td>{{pain.poid_pain}}</td>
                                {% endfor %}
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block navbar %}

{% endblock %}