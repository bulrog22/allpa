{% extends 'base.html.twig' %}

{% block title %}Sythèse poids{% endblock %}

{% block titre_page %}
<h3 class="s-0 text-dark">Sythèse des poids</h3>
{% endblock %}
{% block body 
%}
<div class="col-md-12">
    <div class="card">
        {% for poidsDate in poidsDates %}
            <div class="card">
                <div class="card-header border-transparent">
                    <h3 class="card-title">{{ poidsDate.date|format_datetime('full', 'none', locale='fr') }}</h3>
                    <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    </div>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-sm table-bordered">
                            <thead>
                                <tr>
                                {% for pain in poidsDate.pains %}
                                    <th>{{ pain.id }}</th>
                                
                                {% endfor %}
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                {% for pain in poidsDate.pains %}
                                    <td>{{ pain.nom }}</td>
                                
                                {% endfor %}
                                </tr>

                                <tr>
                                {% for pain in poidsDate.pains %}
                                    {% if pain.poid is not empty %}
                                    <td>{{ pain.poid[0].poid }}</td>
                                    {% else %}
                                    <td>0</td>
                                    {% endif %}

                                {% endfor %}
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block navbar %}

{% endblock %}