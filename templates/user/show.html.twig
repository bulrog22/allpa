{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}

    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Utilisateur</h3>
                <div class="card-tools">
                        {{ include('user/_delete_form.html.twig') }}    
                </div>            
            </div>
            <!-- /.card-header -->
            <div class="card-body">

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Nom</th>
                            <td>{{ user.nom }}</td>
                        </tr>
                        <tr>
                            <th>Prénom</th>
                            <td>{{ user.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.mail }}</td>
                        </tr>
                        <tr>
                            <th>Téléphone</th>
                            <td>{{ user.phone }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-md-2">
                        <a href="{{ path('user_index') }}"><i class="fas fa-angle-double-left"></i></a>
                    </div>
                    <div class="col-md-8">
                    </div>
                    <div class="col-md-2">
                        <a href="{{ path('user_edit', {'id': user.id}) }}"><button class="btn btn-info center">{{ button_label|default('Modifier') }}</button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

        
{% endblock %}
