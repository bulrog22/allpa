{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}

    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Utilisateur</h3>
                <div class="card-tools">
                        {{ include('user/_delete_form.html.twig') }}    
                </div>            
            </div>
            <!-- /.card-header -->
            <div class="card-body">

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Nom d'utilisateur</th>
                            <td>{{ user.username }}</td>
                        </tr>
                        <tr>
                            <th>Mot de passe</th>
                            <td>{{ user.password }}</td>
                        </tr>
                    </tbody>
                </table>
                <a href="{{ path('user_index') }}"><i class="fas fa-angle-double-left"></i></a>
            </div>
        </div>
    </div>

        
{% endblock %}
