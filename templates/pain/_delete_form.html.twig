<form method="post" action="{{ path('pain_delete', {'id': pain.id}) }}" onsubmit="return confirm({% trans %}delete_message{% endtrans %});">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pain.id) }}">
    <button class="btn"><i class="fas fa-trash-alt"></i></button>
</form>
