{% extends 'base.html.twig' %}

{% block title %}Commandes{% endblock %}

{% block body %}
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">{{ commande.prenom }} {{ commande.nom }} - {{ commande.jourDistrib.date|format_datetime('full', 'none', locale='fr') }}</h5>
                <div class="card-tools">
                    {{ include('commande/_delete_form.html.twig') }}
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">

                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Poid</th>
                            <th>Quantite</th>
                            <th>Prix</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% set total = 0 %}
                    {% for ligne in commande.lignecommandes %}
                        {% set somme = ligne.quantite*ligne.pain.prix %}
                        {% set total = total+somme %}
                        <tr>
                            <td>{{ ligne.pain.nom }}</td>
                            <td>{{ ligne.pain.poid }}</td>
                            <td>{{ ligne.quantite }}</td>
                            <td>{{ somme }}</td>
                        </tr>
                    {% endfor %}
                        <tr>
                            <td></td>
                            <td></td>
                            <td>Total</td>
                            <td>{{ total }}â‚¬</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

